{# === Formulaire projet (création/édition) === #}
<div class="project-form-card">
    {{ form_start(form) }}
        <div class="project-form-fields">
            {# --- Nom du projet --- #}
            <div class="project-form-block">{{ form_row(form.name) }}</div>
            {# --- Image du projet --- #}
            <div class="project-form-block">{{ form_row(form.image) }}</div>
            {# --- Langages (cases à cocher, grille 3 colonnes) --- #}
            <div class="project-form-block">
                <label style="display:block;margin-bottom:8px;">Langages</label>
                <div class="project-langages-row">
                    {% for child in form.langages %}
                        <div class="project-lang-checkbox" style="display: flex; flex-direction: column; align-items: center;">
                            {{ form_label(child) }}
                            {{ form_widget(child) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            {# --- Description --- #}
            <div class="project-form-block">{{ form_row(form.description) }}</div>
            {# --- Lien Github --- #}
            <div class="project-form-block">{{ form_row(form.GithubLink) }}</div>
            {# --- Date de création --- #}
            <div class="project-form-block">{{ form_row(form.createAt) }}</div>
            {{ form_row(form._token) }}
        </div>
        <button class="project-form-btn">{{ button_label|default('Ajouter le projet') }}</button>
    {{ form_end(form) }}
</div>
