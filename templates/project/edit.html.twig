{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    {# === Titre de la page === #}
    <h1 class="projects-title">Modifier le projet</h1>

    {# === Formulaire d'édition === #}
    {{ include('project/_form.html.twig', {'button_label': 'Update'}) }}

    {# === Séparateur et bouton supprimer === #}
    <div style="display:flex;justify-content:center;align-items:center;margin:32px 0 0 0;flex-direction:column;">
        <hr style="width:60%;border:0;border-top:2px solid #e0e0e0;margin-bottom:24px;">
        {{ include('project/_delete_form.html.twig') }}
    </div>

    {# === Lien retour à la liste === #}
    <div style="text-align:center;margin-top:18px;">
        <a class="btn-return-list" href="{{ path('app_projects_public') }}">Retour à la liste des projets</a>
    </div>
{% endblock %}
