{# === Formulaire de suppression projet === #}
<form method="post" action="{{ path('app_project_delete', {'id': project.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?');" style="width:80%;max-width:260px;">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
	<button class="cv-button project-delete-btn" style="width:100%;">Supprimer</button>
</form>

